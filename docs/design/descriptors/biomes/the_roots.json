  "DescriptorCategories": {
    "Adjectives": [
      "Corroded",
      "Decaying",
      "Twisted",
      "Shattered",
      "Rusted",
      "Collapsed",
      "Warped",
      "Crumbling",
      "Oxidized",
      "Fractured"
    ],
    "Details": [
      "Runic glyphs flicker weakly on the walls, their light stuttering",
      "A massive crack runs along the eastern wall, exposing conduits beneath",
      "Condensation drips steadily from corroded pipes overhead",
      "Pools of iridescent sludge collect in the low points of the floor",
      "The ceiling sags under centuries of accumulated stress",
      "Fragments of shattered Data-Slates litter the debris",
      "Ancient warning symbols are barely visible through layers of rust",
      "Emergency lighting strips provide dim, flickering illumination",
      "The walls are scarred by blast marks from a long-forgotten conflict",
      "Graffiti in Old Aetheric script marks this as a worker's route"
    ],
    "Sounds": [
      "hissing steam escaping from fractured pipes",
      "groaning metal under unseen strain",
      "dripping water echoing in the distance",
      "the whir of failing servos",
      "grinding gears struggling against corrosion",
      "creaking support structures settling",
      "electrical arcing from exposed conduits",
      "distant rumbling from geothermal systems"
    ],
    "Smells": [
      "ozone from arcing power conduits",
      "metallic tang of rust",
      "sweet decay of organic matter",
      "damp earth and mildew",
      "acrid chemical residue",
      "burnt insulation",
      "stale, recycled air"
    ]
  },
