{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Boss Configuration",
    "description": "Schema for boss encounter definitions including multi-phase configurations, health thresholds, ability rotations, stat modifiers, summon configurations, and loot tables.",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Reference to the JSON schema file for validation"
        },
        "bosses": {
            "type": "array",
            "description": "List of boss encounter definitions",
            "items": {
                "$ref": "#/definitions/BossDefinition"
            },
            "minItems": 1
        }
    },
    "required": [
        "bosses"
    ],
    "additionalProperties": false,
    "definitions": {
        "BossDefinition": {
            "type": "object",
            "description": "A boss encounter definition with phases, abilities, and loot.",
            "properties": {
                "bossId": {
                    "type": "string",
                    "description": "Unique identifier for the boss.",
                    "pattern": "^[a-z][a-z0-9-]*$",
                    "minLength": 1,
                    "maxLength": 50
                },
                "name": {
                    "type": "string",
                    "description": "Display name shown to players during encounters.",
                    "minLength": 1,
                    "maxLength": 100
                },
                "description": {
                    "type": "string",
                    "description": "Lore or flavor text describing the boss."
                },
                "baseMonsterDefinitionId": {
                    "type": "string",
                    "description": "Reference to base monster definition.",
                    "pattern": "^[a-z][a-z0-9-]*$"
                },
                "titleText": {
                    "type": "string",
                    "description": "Optional title displayed below name.",
                    "maxLength": 100
                },
                "phases": {
                    "type": "array",
                    "description": "Boss phases in order of activation by health threshold.",
                    "items": {
                        "$ref": "#/definitions/BossPhase"
                    },
                    "minItems": 1
                },
                "loot": {
                    "type": "array",
                    "description": "Loot entries dropped on boss defeat.",
                    "items": {
                        "$ref": "#/definitions/BossLoot"
                    }
                }
            },
            "required": [
                "bossId",
                "name",
                "description",
                "baseMonsterDefinitionId",
                "phases"
            ],
            "additionalProperties": false
        },
        "BossPhase": {
            "type": "object",
            "description": "A boss combat phase with specific behavior and abilities.",
            "properties": {
                "phaseNumber": {
                    "type": "integer",
                    "description": "Phase number (1-based).",
                    "minimum": 1
                },
                "name": {
                    "type": "string",
                    "description": "Display name for the phase.",
                    "minLength": 1,
                    "maxLength": 100
                },
                "healthThreshold": {
                    "type": "integer",
                    "description": "Health percentage at which this phase activates.",
                    "minimum": 0,
                    "maximum": 100
                },
                "behavior": {
                    "type": "string",
                    "description": "AI behavior pattern for this phase.",
                    "enum": [
                        "Aggressive",
                        "Defensive",
                        "Tactical",
                        "Berserk",
                        "Summoner",
                        "Enraged"
                    ]
                },
                "abilityIds": {
                    "type": "array",
                    "description": "Abilities available during this phase.",
                    "items": {
                        "type": "string",
                        "pattern": "^[a-z][a-z0-9-]*$"
                    }
                },
                "statModifiers": {
                    "type": "array",
                    "description": "Stat modifications applied during this phase.",
                    "items": {
                        "$ref": "#/definitions/StatModifier"
                    }
                },
                "transitionText": {
                    "type": "string",
                    "description": "Text displayed when transitioning to this phase."
                },
                "transitionEffectId": {
                    "type": "string",
                    "description": "Visual effect ID played on phase transition.",
                    "pattern": "^[a-z][a-z0-9-]*$"
                },
                "summonConfig": {
                    "$ref": "#/definitions/SummonConfig",
                    "description": "Minion summoning configuration for this phase."
                }
            },
            "required": [
                "phaseNumber",
                "name",
                "healthThreshold",
                "behavior"
            ],
            "additionalProperties": false
        },
        "StatModifier": {
            "type": "object",
            "description": "A single stat modifier with ID, type, and value.",
            "properties": {
                "statId": {
                    "type": "string",
                    "description": "The stat to modify (e.g., attack, defense, speed)."
                },
                "type": {
                    "type": "string",
                    "description": "Modifier type (Flat, Percent, etc.)."
                },
                "value": {
                    "type": "number",
                    "description": "Modifier value."
                }
            },
            "required": [
                "statId",
                "value"
            ],
            "additionalProperties": false
        },
        "BossLoot": {
            "type": "object",
            "description": "A loot entry with item, amount, and drop chance.",
            "properties": {
                "itemId": {
                    "type": "string",
                    "description": "ID of the loot item.",
                    "pattern": "^[a-z][a-z0-9-]*$"
                },
                "amount": {
                    "type": "integer",
                    "description": "Quantity of the item dropped.",
                    "minimum": 1
                },
                "chance": {
                    "type": "number",
                    "description": "Drop chance (0.0 to 1.0).",
                    "minimum": 0.0,
                    "maximum": 1.0
                }
            },
            "required": [
                "itemId",
                "amount",
                "chance"
            ],
            "additionalProperties": false
        },
        "SummonConfig": {
            "type": "object",
            "description": "Configuration for boss minion summoning.",
            "properties": {
                "monsterDefinitionId": {
                    "type": "string",
                    "description": "Monster ID to summon.",
                    "pattern": "^[a-z][a-z0-9-]*$"
                },
                "count": {
                    "type": "integer",
                    "description": "Number of monsters to summon.",
                    "minimum": 1
                },
                "intervalTurns": {
                    "type": "integer",
                    "description": "Turns between summons.",
                    "minimum": 1
                },
                "maxActive": {
                    "type": "integer",
                    "description": "Maximum active summons at once.",
                    "minimum": 1
                }
            },
            "required": [
                "monsterDefinitionId",
                "count"
            ],
            "additionalProperties": false
        }
    }
}
