<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Quest List Panel -->
    <Style Selector="Border.quest-list-panel">
        <Setter Property="Background" Value="#1A1A1A" />
    </Style>
    
    <!-- Section Header -->
    <Style Selector="TextBlock.section-header">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    
    <!-- Quest Entry -->
    <Style Selector="Border.quest-entry">
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Margin" Value="0,2" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    
    <Style Selector="Border.quest-entry:pointerover">
        <Setter Property="Background" Value="#333333" />
    </Style>
    
    <Style Selector="Border.quest-entry.selected">
        <Setter Property="Background" Value="#3F51B5" />
    </Style>
    
    <!-- Track Button -->
    <Style Selector="Button.track-button">
        <Setter Property="Background" Value="#3F51B5" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="16,8" />
    </Style>
    
    <Style Selector="Button.track-button:pointerover">
        <Setter Property="Background" Value="#5C6BC0" />
    </Style>
    
    <!-- Progress Bar -->
    <Style Selector="ProgressBar.quest-progress">
        <Setter Property="Height" Value="8" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Foreground" Value="#4CAF50" />
        <Setter Property="Background" Value="#333333" />
    </Style>
    
    <!-- Section Toggle -->
    <Style Selector="Button.section-toggle">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>
    
</Styles>
