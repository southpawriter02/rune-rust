<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RuneAndRust.Presentation.Gui.ViewModels"
        x:Class="RuneAndRust.Presentation.Gui.Views.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Title="Settings"
        Width="500" Height="400"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    
    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="SETTINGS"
                   Classes="heading"
                   Margin="0,0,0,24" />
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">
                
                <!-- Display Section -->
                <Border Classes="panel">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Display" Classes="body" FontWeight="SemiBold" />
                        
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" Margin="8,0">
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Window Mode:" Classes="secondary"
                                       VerticalAlignment="Center" Margin="0,0,16,8" />
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      ItemsSource="{Binding WindowModes}"
                                      SelectedItem="{Binding SelectedWindowMode}"
                                      MinWidth="200" Margin="0,0,0,8" />
                            
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Resolution:" Classes="secondary"
                                       VerticalAlignment="Center" Margin="0,0,16,0" />
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      ItemsSource="{Binding Resolutions}"
                                      SelectedItem="{Binding SelectedResolution}"
                                      MinWidth="200" />
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Audio Section -->
                <Border Classes="panel">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Audio" Classes="body" FontWeight="SemiBold" />
                        
                        <StackPanel Spacing="8" Margin="8,0">
                            <Grid ColumnDefinitions="100,*,50">
                                <TextBlock Text="Master:" Classes="secondary" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Minimum="0" Maximum="100"
                                        Value="{Binding MasterVolume}" />
                                <TextBlock Grid.Column="2" Text="{Binding MasterVolume, StringFormat={}{0}%}"
                                           Classes="muted" VerticalAlignment="Center" HorizontalAlignment="Right" />
                            </Grid>
                            
                            <Grid ColumnDefinitions="100,*,50">
                                <TextBlock Text="Music:" Classes="secondary" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Minimum="0" Maximum="100"
                                        Value="{Binding MusicVolume}" />
                                <TextBlock Grid.Column="2" Text="{Binding MusicVolume, StringFormat={}{0}%}"
                                           Classes="muted" VerticalAlignment="Center" HorizontalAlignment="Right" />
                            </Grid>
                            
                            <Grid ColumnDefinitions="100,*,50">
                                <TextBlock Text="SFX:" Classes="secondary" VerticalAlignment="Center" />
                                <Slider Grid.Column="1" Minimum="0" Maximum="100"
                                        Value="{Binding SfxVolume}" />
                                <TextBlock Grid.Column="2" Text="{Binding SfxVolume, StringFormat={}{0}%}"
                                           Classes="muted" VerticalAlignment="Center" HorizontalAlignment="Right" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Spacing="16" Margin="0,24,0,0">
            <Button Classes="action-button" Content="Apply"
                    Command="{Binding ApplyCommand}" MinWidth="100" />
            <Button Classes="menu-button" Content="Cancel"
                    Command="{Binding CancelCommand}" MinWidth="100" />
        </StackPanel>
    </Grid>
</Window>
