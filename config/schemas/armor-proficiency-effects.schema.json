{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "armor-proficiency-effects.schema.json",
  "title": "Armor Proficiency Effects Configuration",
  "description": "Schema for armor proficiency effects loaded from armor-proficiency-effects.json",
  "type": "object",
  "required": ["armorProficiencyEffects"],
  "properties": {
    "$comment": {
      "type": "string",
      "description": "Optional comment for version tracking"
    },
    "armorProficiencyEffects": {
      "type": "array",
      "description": "Array of armor proficiency effect definitions",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "$ref": "#/$defs/armorProficiencyEffect"
      }
    }
  },
  "$defs": {
    "armorProficiencyEffect": {
      "type": "object",
      "description": "Defines effects for a single armor proficiency level",
      "required": [
        "level",
        "penaltyMultiplier",
        "attackModifier",
        "defenseModifier",
        "tierReduction",
        "canUseSpecialProperties",
        "displayName",
        "description"
      ],
      "properties": {
        "level": {
          "type": "string",
          "description": "The proficiency level identifier",
          "enum": ["NonProficient", "Proficient", "Expert", "Master"]
        },
        "penaltyMultiplier": {
          "type": "number",
          "description": "Multiplier for armor penalties (1.0 = normal, 2.0 = doubled)",
          "minimum": 1.0,
          "maximum": 3.0
        },
        "attackModifier": {
          "type": "integer",
          "description": "Modifier applied to attack rolls",
          "minimum": -5,
          "maximum": 0
        },
        "defenseModifier": {
          "type": "integer",
          "description": "Modifier applied to defense",
          "minimum": 0,
          "maximum": 3
        },
        "tierReduction": {
          "type": "integer",
          "description": "Number of tiers to reduce for penalty calculation",
          "minimum": 0,
          "maximum": 2
        },
        "canUseSpecialProperties": {
          "type": "boolean",
          "description": "Whether armor special properties can be activated"
        },
        "displayName": {
          "type": "string",
          "description": "Human-readable display name for UI",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "Flavor text describing this proficiency level",
          "minLength": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
