{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AchievementPanelConfig",
    "description": "Configuration for the achievement panel display",
    "type": "object",
    "properties": {
        "panelWidth": {
            "type": "integer",
            "description": "The width of the panel in characters",
            "minimum": 50,
            "default": 70
        },
        "panelHeight": {
            "type": "integer",
            "description": "The height of the panel in characters",
            "minimum": 20,
            "default": 40
        },
        "summaryOffset": {
            "type": "integer",
            "description": "The offset for the summary text from the left edge",
            "minimum": 0,
            "default": 35
        },
        "progressBarWidth": {
            "type": "integer",
            "description": "The width of progress bars in characters",
            "minimum": 10,
            "maximum": 60,
            "default": 40
        },
        "notificationDurationSeconds": {
            "type": "integer",
            "description": "The duration for achievement notifications in seconds",
            "minimum": 1,
            "maximum": 30,
            "default": 5
        },
        "showSecretPlaceholders": {
            "type": "boolean",
            "description": "Whether to show secret achievements as placeholders",
            "default": true
        },
        "cardWidth": {
            "type": "integer",
            "description": "The width of achievement cards in characters",
            "minimum": 40,
            "maximum": 80,
            "default": 65
        },
        "notificationWidth": {
            "type": "integer",
            "description": "The width of unlock notification popups in characters",
            "minimum": 40,
            "maximum": 80,
            "default": 55
        },
        "categoryColors": {
            "type": "object",
            "description": "Colors for achievement categories",
            "additionalProperties": {
                "type": "string"
            }
        },
        "tierColors": {
            "type": "object",
            "description": "Colors for achievement rarity tiers",
            "additionalProperties": {
                "type": "string"
            }
        },
        "statusIndicators": {
            "type": "object",
            "description": "Status indicator strings for achievement states",
            "properties": {
                "unlocked": {
                    "type": "string",
                    "default": "[x]"
                },
                "inProgress": {
                    "type": "string",
                    "default": "[~]"
                },
                "notStarted": {
                    "type": "string",
                    "default": "( )"
                },
                "locked": {
                    "type": "string",
                    "default": "[L]"
                }
            }
        }
    },
    "required": [
        "panelWidth",
        "panelHeight"
    ]
}