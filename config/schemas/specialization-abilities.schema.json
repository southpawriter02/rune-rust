{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "specialization-abilities.schema.json",
    "title": "Specialization Abilities Configuration",
    "description": "Configuration for specialization-specific abilities",
    "type": "object",
    "required": [
        "version",
        "specializations"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "description": "JSON Schema reference"
        },
        "version": {
            "type": "string",
            "description": "Configuration version",
            "pattern": "^\\d+\\.\\d+\\.\\d+[a-z]?$"
        },
        "description": {
            "type": "string",
            "description": "Human-readable description"
        },
        "specializations": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/specialization"
            }
        }
    },
    "$defs": {
        "specialization": {
            "type": "object",
            "required": [
                "id",
                "name",
                "abilities"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[a-z][a-z0-9-]*$"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "primarySkill": {
                    "type": "string"
                },
                "abilities": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/ability"
                    }
                }
            }
        },
        "ability": {
            "type": "object",
            "required": [
                "id",
                "name",
                "type",
                "description"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[a-z][a-z0-9-]*$"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "passive",
                        "triggered",
                        "reactive",
                        "active"
                    ]
                },
                "description": {
                    "type": "string"
                },
                "trigger": {
                    "oneOf": [
                        {
                            "type": "string",
                            "description": "Simple text description of the trigger condition"
                        },
                        {
                            "$ref": "#/$defs/triggerCondition",
                            "description": "Structured trigger condition for programmatic evaluation"
                        }
                    ]
                },
                "requirements": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "cost": {
                    "type": "object",
                    "properties": {
                        "actions": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "concentration": {
                            "type": "boolean"
                        }
                    }
                },
                "uses": {
                    "type": "object",
                    "properties": {
                        "count": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "resetOn": {
                            "type": "string",
                            "enum": [
                                "long-rest",
                                "short-rest",
                                "encounter-end"
                            ]
                        }
                    }
                },
                "effect": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "value": {
                            "type": "integer"
                        },
                        "minimum": {
                            "type": "integer"
                        },
                        "bonusFeet": {
                            "type": "integer"
                        },
                        "diceBonus": {
                            "type": "integer"
                        },
                        "dc": {
                            "type": "integer"
                        },
                        "dcThreshold": {
                            "type": "integer"
                        },
                        "rangeFeet": {
                            "type": "integer"
                        },
                        "maxDistance": {
                            "type": "string"
                        },
                        "condition": {
                            "type": "string"
                        },
                        "actionCost": {
                            "type": "integer"
                        },
                        "target": {
                            "type": "string"
                        },
                        "duration": {
                            "type": "string",
                            "description": "Duration of the effect (e.g., 'until-rest')"
                        },
                        "checkTypes": {
                            "type": "array",
                            "description": "Check types affected by zone marker",
                            "items": {
                                "type": "string"
                            }
                        },
                        "reveals": {
                            "type": "array",
                            "description": "Information revealed by post-check abilities",
                            "items": {
                                "type": "string"
                            }
                        },
                        "avoids": {
                            "type": "array",
                            "description": "Hazards avoided by path-reveal abilities",
                            "items": {
                                "type": "string"
                            }
                        },
                        "pathType": {
                            "type": "string",
                            "description": "Type of path revealed (e.g., 'elevated')"
                        },
                        "bypasses": {
                            "type": "array",
                            "description": "Obstacles bypassed by path-reveal abilities",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "limitations": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "narrativeTemplates": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "creatureWeaknesses": {
                    "type": "array",
                    "description": "List of possible creature weaknesses (for Predator's Eye ability)",
                    "items": {
                        "type": "string"
                    }
                },
                "behaviorPatterns": {
                    "type": "array",
                    "description": "List of possible creature behavior patterns (for Predator's Eye ability)",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "triggerCondition": {
            "type": "object",
            "description": "Structured trigger condition for programmatic ability evaluation",
            "properties": {
                "checkType": {
                    "type": "string",
                    "description": "The type of Wasteland Survival check that triggers this ability",
                    "enum": [
                        "General",
                        "Tracking",
                        "Foraging",
                        "Navigation",
                        "HazardDetection",
                        "SignReading",
                        "Scouting"
                    ]
                },
                "targetType": {
                    "type": "string",
                    "description": "The type of target being tracked (for Beast Tracker)",
                    "enum": [
                        "Unknown",
                        "LivingCreature",
                        "Construct",
                        "Vehicle",
                        "Group"
                    ]
                },
                "terrain": {
                    "type": "array",
                    "description": "Terrain types that trigger this ability",
                    "items": {
                        "type": "string"
                    }
                },
                "hazardType": {
                    "type": "string",
                    "description": "Hazard type that triggers this ability (for Toxin Resistance)"
                }
            }
        }
    }
}